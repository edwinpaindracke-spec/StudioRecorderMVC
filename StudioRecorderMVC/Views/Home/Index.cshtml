

@{
    ViewData["Title"] = "Studio Recorder";
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="studio-title">🎙️ Your Online Recording Studio</h1>
        <p class="studio-subtitle">
            Record, mix, and create high-quality audio directly in your browser.
        </p>

        <a class="studio-btn" asp-controller="Studio" asp-action="Index">
            <i class="fa-solid fa-microphone-lines"></i> Open Studio Recorder
        </a>
    </div>
</div>

<section class="features">
    <div class="feature">
        <i class="fa-solid fa-waveform-lines"></i>
        <h3>High-Quality Recording</h3>
        <p>Capture crystal-clear audio with real-time monitoring.</p>
    </div>
    <div class="feature">
        <i class="fa-solid fa-sliders"></i>
        <h3>Built-in Editing Tools</h3>
        <p>Trim, mix, and clean audio tracks on the fly.</p>
    </div>
    <div class="feature">
        <i class="fa-solid fa-cloud-arrow-up"></i>
        <h3>Cloud Ready</h3>
        <p>Save and download your recordings anytime.</p>
    </div>
</section>
